<metro:MetroWindow x:Class="Reclaimer.Windows.ToolWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reclaimer.Windows"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:s="clr-namespace:Studio.Controls;assembly=Studio"
        mc:Ignorable="d" Height="300" Width="300"
        s:DockManager.IsActive="{Binding IsActive, RelativeSource={RelativeSource Self}, Mode=OneWay}"
        Title="{Binding Content.SelectedItem.ToolTip, RelativeSource={RelativeSource Self}}"
        WindowStartupLocation="Manual" ShowMinButton="False"
        ContentTemplateSelector="{StaticResource coreTemplateSelector}"
        Style="{StaticResource ToolWindowStyle}">
</metro:MetroWindow>
