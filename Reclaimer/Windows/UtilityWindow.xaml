<metro:MetroWindow x:Class="Reclaimer.Windows.UtilityWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reclaimer.Windows"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:c="clr-namespace:Studio.Controls;assembly=Studio"
        mc:Ignorable="d" Height="300" Width="300"
        Loaded="MetroWindow_Loaded"
        ShowActivated="True" WindowStartupLocation="Manual"
        Style="{StaticResource UtilityWindowStyle}"
        Title="{Binding SelectedItem.TabHeader, ElementName=tabControl}">
    
    <Grid x:Name="root" Background="{DynamicResource WindowBackground}">
        <c:UtilityTabControl x:Name="tabControl" ShowTitlePanel="False"
                             NewWindowType="{x:Type local:UtilityWindow}">

        </c:UtilityTabControl>
    </Grid>
</metro:MetroWindow>
